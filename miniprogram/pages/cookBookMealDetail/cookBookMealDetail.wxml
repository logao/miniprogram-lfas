<!--miniprogram/pages/cookBookMealDetail/cookBookMealDetail.wxml-->
<view class="cookBookMealDetail-container">
  <image src="{{localMealPhotoPath}}" catchtap="choosePhoto" />

  <form bindsubmit="formSubmit">

    <view class="tui-menu-list">
      <checkbox-group name="isBreakfirst">
        <checkbox value="true" checked="true" />是否为早餐
      </checkbox-group>

    </view>
    <radio-group name="mealType" class="radio-group" bindchange="radioChange">
      <label class="radio" wx:for="{{mealTypeRadio}}">
        <view class="tui-menu-list">
          <radio color="#007aff" value="{{item.value}}" checked="{{item.checked}}" />{{item.name}}
        </view>
      </label>
    </radio-group>

    <view class='tui-accordion-from'>
      <view class="tui-menu-list tui-clear">
        <input name="mealName" placeholder="菜名"></input>
      </view>
      <view class="tui-menu-list tui-clear">
        <input name="mealWeightNum" placeholder="分数" value="5"></input>
      </view>
      <view class="tui-menu-list tui-clear">
        <input name="mealDesc" placeholder="说明"></input>
      </view>
    </view>

    <button class="weui-btn" style='margin:5px;' type="primary" form-type="submit">
      <view wx:if="{{operation=='add'}}">加菜</view>
      <view wx:if="{{operation=='edit'}}">更新</view>
    </button>
  </form>
</view>